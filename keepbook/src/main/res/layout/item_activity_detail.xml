<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView android:id="@+id/tv_item_detail_classes" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="11" android:text="购物类别"
            android:textColor="@color/black" android:textSize="26sp" />
        <TextView android:id="@+id/tv_item_detail_money" android:textSize="26sp"
            android:textColor="@color/red" android:text="888.88" android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView android:id="@+id/tv_item_detail_remark" android:textSize="18sp"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="12-12-10:24 买了一架飞机" android:textColor="@color/gray" />

</LinearLayout>
